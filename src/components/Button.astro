---
import { twMerge } from "tailwind-merge";
const { className, link, target, glow } = Astro.props;
---

<a href={link} target={target ?? "_self"} class="w-fit">
  <div
    class={twMerge(
      `px-5 py-3 bg-gray-800 border-2 border-emerald-200 border-solid hover:bg-emerald-200 hover:text-gray-800 hover:shadow-emerald-200 duration-300`,
      glow && `hover:shadow-[0_0_15px_4px]`,
      className,
    )}
  >
    <slot />
  </div>
</a>
