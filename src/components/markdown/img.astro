---
import OptimizePicture from "../OptimizePicture.astro";
import { twMerge } from "tailwind-merge";
const props = Astro.props;
---

<figure class="mx-auto w-fit py-4">
  <a
    href={props.src.src}
    target="_blank"
    class="mx-auto block w-[85%] md:w-[60%]"
    ><OptimizePicture
      class={twMerge(
        props.class,
        "aspect-auto rounded-md border-2 border-gray-400",
      )}
      maxViewport="1280"
      maxWidth="1088"
      pictureAttributes={{ class: "block" }}
      {...props}
    >
      <slot />
    </OptimizePicture></a
  >
  <figcaption class="mt-4 text-center text-sm italic"
    >{props.alt}</figcaption
  >
</figure>
