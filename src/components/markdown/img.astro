---
import OptimizePicture from "../OptimizePicture.astro";
import { twMerge } from "tailwind-merge";
const props = Astro.props;
---

<figure class="py-4">
  <a href={props.src.src} target="_blank">
    <OptimizePicture
      class={twMerge(props.class, "mx-auto w-[85%] aspect-auto")}
      maxViewport="1280"
      maxWidth="1088"
      {...props}
    >
      <slot />
    </OptimizePicture></a
  >
  <figcaption class="mt-4 text-center text-sm italic"
    >{props.alt}</figcaption
  >
</figure>
