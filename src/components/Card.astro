---
import { Icon } from "astro-icon/components";
import { twMerge } from "tailwind-merge";
import strings from "../i18n/strings.js";

const t = strings.card[Astro.currentLocale];
const {
  className,
  title,
  description,
  link,
  linkDescription,
  target,
  icons,
  pointerClass,
} = Astro.props;
---

<div>
  <div class="duration-150">
    <a href={link} target={target ?? "_self"} class="w-fit">
      <div
        class={twMerge(
          "px-5 py-5 w-fit bg-gray-800 border-2 border-emerald-200 border-solid hover:bg-emerald-200 hover:text-gray-800 md:hover:scale-105 transform-gpu duration-300 rounded-md",
          className,
        )}
      >
        <div class="grid min-h-60 md:min-h-64">
          <div>
            <div class="grid grid-flow-col">
              <p
                class="my-auto place-self-start text-lg font-semibold md:text-xl"
              >
                {title}
              </p>
              <div class="place-self-end text-xl md:text-2xl">
                {
                  icons.map((i) => (
                    <Icon
                      name={i}
                      class={twMerge("mx-2 inline", className)}
                    />
                  ))
                }
              </div>
            </div>
            <p class="text-md py-4 md:text-lg">{description}</p>
          </div>
          <div class="w-full place-self-end text-sm">
            {t.link}{" "}
            <span class="font-bold">{linkDescription}</span>
            <Icon
              name="material-symbols:arrow-forward-rounded"
              class="mx-2 inline"
            />
          </div>
        </div>
      </div>
    </a>
  </div>

  <div
    class={twMerge(
      "hidden w-32 h-32 bg-emerald-400 rounded-full blur-2xl -z-10",
      pointerClass,
    )}
  >
  </div>
</div>
