---
import Base from "../../layouts/main.astro";
import Button from "../../components/Button.astro";
import Card from "../../components/Card.astro";

import { Icon } from "astro-icon/components";
import { getRelativeLocaleUrl } from "astro:i18n";

const locale = Astro.currentLocale;
---

<Base title="首頁" desc="Wolf Yuan - 首頁">
  <div class="min-h-screen">
    <div>
      <p class="text-2xl md:text-3xl pt-10">嗨，我是</p>
      <p class="py-6 text-5xl font-extrabold md:text-7xl">
        Wolf Yuan
      </p>
      <p class="pb-10 text-xl md:text-2xl text-slate-300">
        一名來自台灣 🇹🇼 的學生
      </p>
      <p class="text-md md:text-xl text-slate-200 pt-2 pb-5">
        我也是一名
      </p>
      <p class="text-xl md:text-2xl text-green-200 py-2">
        前後端程式設計師
      </p>
      <p class="text-xl md:text-2xl text-blue-200 py-2">
        JavaScript 程式設計師
      </p>
      <p class="text-xl md:text-2xl text-yellow-200 py-2">
        伺服器管理員
      </p>
      <div class="py-12">
        <div class="py-4">
          <Button
            link={getRelativeLocaleUrl(locale, "/blog")}
            className="border-indigo-400 hover:bg-indigo-400 hover:shadow-indigo-400 md:hover:scale-105 md:hover:translate-x-2"
            glow={true}
            prefetch="load"
          >
            <p class="inline text-sm md:text-lg">來逛逛我的部落格</p>
            <Icon
              name="material-symbols:arrow-forward-rounded"
              class="inline"
            />
          </Button>
        </div>
        <div class="py-4">
          <Button
            link="https://w.wolf-yuan.dev/gitlab"
            target="_blank"
            className="border-orange-400 hover:bg-orange-400 hover:shadow-orange-500 md:hover:scale-105 md:hover:translate-x-2"
            glow={true}
          >
            <p class="inline text-sm md:text-lg">
              看看我的 GitLab 個人檔案
            </p>
            <Icon
              name="material-symbols:arrow-forward-rounded"
              class="inline"
            />
          </Button>
        </div>
        <div class="py-4">
          <Button
            link="https://w.wolf-yuan.dev/github"
            target="_blank"
            className="border-violet-400 hover:bg-violet-400 hover:shadow-violet-400 md:hover:scale-105 md:hover:translate-x-2"
            glow={true}
          >
            <p class="inline text-sm md:text-lg">
              或是去看看我的 GitHub 個人檔案
            </p>
            <Icon
              name="material-symbols:arrow-forward-rounded"
              class="inline"
            />
          </Button>
        </div>
      </div>
    </div>
  </div>

  <div>
    <p class="py-12 text-3xl font-extrabold md:text-4xl">技能樹</p>
    <div class="grid grid-cols-1 grid-flow-row gap-6">
      <div class="rounded-md bg-violet-400 px-2 py-4 text-gray-900">
        <p class="px-4 pb-4 text-2xl font-bold">我會</p>
        <div
          class="flex flex-row items-center [&>div]:px-4 [&>div]:flex [&>div]:flex-row [&>div]:items-center [&>div]:gap-4 overflow-x-auto"
        >
          <div>
            <Icon
              name="simple-icons:fedora"
              class="text-xl md:text-2xl"
            />
            <p class="text-lg md:text-xl">Fedora</p>
          </div>
          <div>
            <Icon
              name="simple-icons:javascript"
              class="text-xl md:text-2xl"
            />
            <p class="text-lg md:text-xl">JavaScript</p>
          </div>
          <div>
            <Icon
              name="simple-icons:nodedotjs"
              class="text-xl md:text-2xl"
            />
            <p class="text-lg md:text-xl">Node.js</p>
          </div>
          <div>
            <Icon
              name="simple-icons:docker"
              class="text-xl md:text-2xl"
            />
            <p class="text-lg md:text-xl">Docker</p>
          </div>
        </div>
      </div>
      <div class="rounded-md bg-amber-400 px-2 py-4 text-gray-900">
        <p class="px-4 pb-4 text-2xl font-bold">正在學</p>
        <div
          class="flex flex-row items-center [&>div]:px-4 [&>div]:flex [&>div]:flex-row [&>div]:items-center [&>div]:gap-4 overflow-x-auto"
        >
          <div>
            <Icon
              name="simple-icons:typescript"
              class="text-xl md:text-2xl"
            />
            <p class="text-lg md:text-xl">TypeScript</p>
          </div>
          <div>
            <Icon
              name="simple-icons:react"
              class="text-xl md:text-2xl"
            />
            <p class="text-lg md:text-xl">React</p>
          </div>
          <div>
            <Icon
              name="simple-icons:cplusplus"
              class="text-xl md:text-2xl"
            />
            <p class="text-lg md:text-xl">C++</p>
          </div>
        </div>
      </div>
      <div class="rounded-md bg-red-400 px-2 py-4 text-gray-900">
        <p class="px-4 pb-4 text-2xl font-bold">想學</p>
        <div
          class="flex flex-row items-center [&>div]:px-4 [&>div]:flex [&>div]:flex-row [&>div]:items-center [&>div]:gap-4 overflow-x-auto"
        >
          <div>
            <Icon
              name="simple-icons:rust"
              class="text-xl md:text-2xl"
            />
            <p class="text-lg md:text-xl">Rust</p>
          </div>
          <div>
            <Icon
              name="simple-icons:kubernetes"
              class="text-xl md:text-2xl"
            />
            <p class="text-lg md:text-xl">Kubernetes</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div>
    <p class="py-12 text-3xl font-extrabold md:text-4xl">專案</p>

    <div
      class="grid grid-cols-1 md:grid-cols-2 grid-flow-row content-start gap-7"
    >
      <Card
        title="Dolphin Container"
        description="Dolphin 是一個 Docker 映像檔，讓你以輕鬆的方式部署您的程式至各大託管商"
        link="https://w.wolf-yuan.dev/projects/dolphin"
        linkDescription="gitlab.com/wolf-yuan/dolphin"
        className="border-cyan-400 hover:bg-cyan-400"
        target="_blank"
        icons={[
          {
            icon: "simple-icons:docker",
          },
        ]}
      />
      <Card
        title="Black Cat"
        description="黑貓是一個以 TypeScript 與 Discord.js 撰寫而成的 Discord 音樂機器人"
        link="https://w.wolf-yuan.dev/projects/blackcat"
        linkDescription="gitlab.com/wolf-yuan/blackcat"
        className="border-gray-50  hover:bg-gray-50 hover:text-gray-600"
        target="_blank"
        icons={[
          {
            icon: "simple-icons:nodedotjs",
          },
          {
            icon: "simple-icons:typescript",
          },
          {
            icon: "simple-icons:discord",
          },
        ]}
      />
      <Card
        title="Rep0rter"
        description="Rep0rter 是一個 g0v 可以收集各大平臺的動態並傳送每週電子報的專案"
        link="https://w.wolf-yuan.dev/projects/rep0rter"
        linkDescription="github.com/rep0rter"
        className="border-red-400  hover:bg-red-400 "
        target="_blank"
        icons={[
          {
            icon: "simple-icons:nodedotjs",
          },
          {
            icon: "simple-icons:typescript",
          },
        ]}
      />
    </div>
  </div>
  <div>
    <p class="py-12 text-3xl font-extrabold md:text-4xl">貢獻專案</p>

    <div
      class="grid grid-cols-1 md:grid-cols-2 grid-flow-row content-start gap-7"
    >
      <Card
        title="Yeecord 網站"
        description="Yeecord 是一個多功能的 Discord 機器人，目前在超過 250,000 個伺服器中服務"
        link="https://yeecord.com"
        linkDescription="yeecord.com"
        className="border-[#9cca95] hover:bg-[#9cca95]"
        target="_blank"
        icons={[
          {
            icon: "simple-icons:typescript",
          },
          {
            icon: "simple-icons:nextdotjs",
          },
        ]}
      />
    </div>
  </div>
</Base>
